<section class="flex flex-col h-full">
    <div class="mb-5">
        <div class="flex">
            <h1 class="text-8xl font-normal "><%= genre.genre %></h1>
            <form action="<%= `/genres/delete/${genre.id}` %>" method="post" class="ml-auto">
                <button type="submit" class="flex gap-2 text-red-500 self-center rounded-full p-2 hover:bg-red-500 hover:text-mauve-950 font-light cursor-pointer">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                        <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 0 0 6 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 1 0 .23 1.482l.149-.022.841 10.518A2.75 2.75 0 0 0 7.596 19h4.807a2.75 2.75 0 0 0 2.742-2.53l.841-10.52.149.023a.75.75 0 0 0 .23-1.482A41.03 41.03 0 0 0 14 4.193V3.75A2.75 2.75 0 0 0 11.25 1h-2.5ZM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4ZM8.58 7.72a.75.75 0 0 0-1.5.06l.3 7.5a.75.75 0 1 0 1.5-.06l-.3-7.5Zm4.34.06a.75.75 0 1 0-1.5-.06l-.3 7.5a.75.75 0 1 0 1.5.06l.3-7.5Z" clip-rule="evenodd" />
                    </svg>          
                    <span class="hidden sm:block">Delete genre</span>    
                </button>
            </form>
        </div>
        <div class="flex flex-wrap tracking-tighter">
            <div>
                <span class="font-bold text-xl"><%= genre.count || 0 %> movie<%= genre.count && genre.count == 1 ? '' : 's' %></span>
                <span>available in this genre</span>
            </div>
            <div class="ml-auto text-right">
                <span> created by </span>
                <span class="font-bold text-xl"><%= genre.added_by || 'Anonymous' %></span>
            </div>
        </div>
    </div>
    
    <div class="flex-1 min-h-0 content-start flex flex-wrap gap-6 overflow-y-auto pb-10">
        <% movies.forEach(movie => { %>
    
            <div class="bg-mauve-900 p-4 rounded-2xl w-sm h-36">
                <div class="flex gap-4">
                    <div class="text-3xl font-medium">
                        <%= movie.title %>
                    </div>
                    <div class="self-end">
                        <%= movie.year %>
                    </div>
                </div>
                <div class="">
                    <%= movie.director %>
                </div>
                <div class="mt-2 flex justify-end">
                    <button class="flex items-center gap-1 border-2 py-1 px-2 border-mauve-600 rounded-full cursor-pointer hover:bg-mauve-100 hover:text-mauve-950
                    hover:border-mauve-100 hover:font-light">
                        Open
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16ZM6.75 9.25a.75.75 0 0 0 0 1.5h4.59l-2.1 1.95a.75.75 0 0 0 1.02 1.1l3.5-3.25a.75.75 0 0 0 0-1.1l-3.5-3.25a.75.75 0 1 0-1.02 1.1l2.1 1.95H6.75Z" clip-rule="evenodd" />
                          </svg>                      
                    </button>   
                </div>
            </div>
        <% }); %>
    </div>
    
    
    <script>
        const form = document.querySelector('form');
        form.addEventListener('submit', (e) => {
            e.preventDefault();
            const bool = confirm('Are you sure you want to delete');
            if (bool) {
                form.submit();
            }
            else return;
        })
    </script>
</section>