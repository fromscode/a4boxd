<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>a4boxd</title>
        <link rel="stylesheet" href="/output.css" />
    </head>
    <body>
        <body class="bg-mauve-950 h-screen flex justify-center items-center">
            <form
                action="<%= "/genres/confirm-delete/" + id %>"
                method="post"
                class="border border-mauve-300 p-8 flex flex-col gap-10"
            >
                <div class="flex gap-5">
                    <label
                        for="password"
                        class="flex-1 text-right font-light"
                        >Admin Password:
                    </label>
                    <div class="relative">
                        <input
                        type="password"
                        name="password"
                        id="password"
                        class="border border-mauve-500 flex-3 p-2 pl-2 rounded-md font-light outline-0 w-sm"
                    />
                        <div class="absolute top-3 right-1 cursor-pointer" id="eye-container">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5 hidden" id="eye-slash">
                                <path fill-rule="evenodd" d="M3.28 2.22a.75.75 0 0 0-1.06 1.06l14.5 14.5a.75.75 0 1 0 1.06-1.06l-1.745-1.745a10.029 10.029 0 0 0 3.3-4.38 1.651 1.651 0 0 0 0-1.185A10.004 10.004 0 0 0 9.999 3a9.956 9.956 0 0 0-4.744 1.194L3.28 2.22ZM7.752 6.69l1.092 1.092a2.5 2.5 0 0 1 3.374 3.373l1.091 1.092a4 4 0 0 0-5.557-5.557Z" clip-rule="evenodd" />
                                <path d="m10.748 13.93 2.523 2.523a9.987 9.987 0 0 1-3.27.547c-4.258 0-7.894-2.66-9.337-6.41a1.651 1.651 0 0 1 0-1.186A10.007 10.007 0 0 1 2.839 6.02L6.07 9.252a4 4 0 0 0 4.678 4.678Z" />
                            </svg>
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5" id="eye-full">
                                <path d="M10 12.5a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
                                <path fill-rule="evenodd" d="M.664 10.59a1.651 1.651 0 0 1 0-1.186A10.004 10.004 0 0 1 10 3c4.257 0 7.893 2.66 9.336 6.41.147.381.146.804 0 1.186A10.004 10.004 0 0 1 10 17c-4.257 0-7.893-2.66-9.336-6.41ZM14 10a4 4 0 1 1-8 0 4 4 0 0 1 8 0Z" clip-rule="evenodd" />
                            </svg>  
                        </div>
                    </div>
                </div>
                <% if (msg) { %>
                    <p
                    class="font-light text-red-600 text-center mt-2"
                    id="value-missing"
                >
                    <%= msg %>
                </p>
                <% } %>
                <div class="flex justify-center">
                    <button
                        type="submit"
                        class="text-red-500 self-center rounded-full p-2 hover:bg-red-600 hover:text-mauve-950 font-normal cursor-pointer"
                    >
                        Delete
                    </button>
                </div>
            </form>



            <script>
                const eyefull = document.getElementById('eye-full');
                const eyeslash = document.getElementById('eye-slash');
                const eyeContainer = document.getElementById('eye-container');
                const input = document.getElementById('password');

                eyeContainer.addEventListener('click', () => {
                    const type = input['type'];
                    if (type == 'password') {
                        input['type'] = 'text';
                        eyeslash.classList.remove('hidden')
                        eyefull.classList.add('hidden');
                    }
                    else {
                        input['type'] = 'password';
                        eyeslash.classList.add('hidden')
                        eyefull.classList.remove('hidden');
                    }
                })
            </script>

        </body>
    </body>
</html>
